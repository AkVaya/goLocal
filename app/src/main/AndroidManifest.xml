<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.golocalfinal">

    <application
        android:allowBackup="true"
        android:icon="@drawable/appicon"
        android:label="GoLocal"
        android:roundIcon="@drawable/appiconround"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity"
            android:parentActivityName=".SplashScreen"/>
        <activity android:name=".SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SignUpActivity"
            android:label="Sign Up"/>

        <activity android:name=".AfterLoginSeller"
            android:label="Add Categories"/>

        <activity android:name=".AfterLoginBuyer"/>

        <activity android:name=".SellerBasicInfo"/>

        <activity android:name=".BuyerBasicInfo"/>

        <activity android:name=".CategorySpecificInfo"
            android:label="Add Products"
            android:parentActivityName=".AfterLoginSeller"/>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>