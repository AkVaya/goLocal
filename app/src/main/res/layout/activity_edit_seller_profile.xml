<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditSellerProfile">

  <androidx.appcompat.widget.Toolbar
      android:id="@+id/toolbar5"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="?attr/colorPrimary"
      android:minHeight="?attr/actionBarSize"
      android:theme="?attr/actionBarTheme"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <ImageView
      android:id="@+id/imageView20"
      android:layout_width="569dp"
      android:layout_height="301dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:srcCompat="@drawable/frame" />

  <androidx.constraintlayout.widget.ConstraintLayout
      android:id="@+id/constraintLayout3"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginStart="24dp"
      android:layout_marginTop="56dp"
      android:layout_marginEnd="24dp"
      android:background="@drawable/rounded_button_transparent"
      android:backgroundTint="#D9C4C4C4"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/toolbar5">

    <EditText
        android:id="@+id/outletCity"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Outlet City"
        android:inputType="textPersonName"
        android:textColorHint="#D5000000"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="@+id/outletAddress"
        app:layout_constraintTop_toBottomOf="@+id/outletAddress" />

    <EditText
        android:id="@+id/outletContactName"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Contact Person's Name"
        android:inputType="textPersonName"
        android:textColorHint="#D5000000"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="@+id/outletLocality"
        app:layout_constraintTop_toBottomOf="@+id/outletLocality" />

    <EditText
        android:id="@+id/outletAddress"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Outlet Address"
        android:inputType="textLongMessage"
        android:textColor="#000000"
        android:textColorHint="#D5000000"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="@+id/outletName"
        app:layout_constraintStart_toStartOf="@+id/outletName"
        app:layout_constraintTop_toBottomOf="@+id/outletName" />

    <EditText
        android:id="@+id/outletName"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="Outlet Name"
        android:inputType="textLongMessage"
        android:textColorHint="#D5000000"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/outletContact"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="30dp"
        android:ems="10"
        android:hint="Mobile Number"
        android:inputType="number"
        android:textColorHint="#D5000000"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/outletContactName"
        app:layout_constraintTop_toBottomOf="@+id/outletContactName"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/outletLocality"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Outlet Locality"
        android:inputType="textPersonName"
        android:textColorHint="#D5000000"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="@+id/outletCity"
        app:layout_constraintTop_toBottomOf="@+id/outletCity" />
  </androidx.constraintlayout.widget.ConstraintLayout>

  <Button
      android:id="@+id/button"
      android:layout_width="170dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="48dp"
      android:background="@drawable/rounded_button_transparent"
      android:backgroundTint="@color/colorAccent"
      android:fontFamily="@font/montserrat"
      android:text="Confirm Changes"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.497"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/constraintLayout3" />

</androidx.constraintlayout.widget.ConstraintLayout>